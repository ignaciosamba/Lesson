<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <android.support.design.widget.AppBarLayout android:id="@+id/appbar_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_table"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/table_soccer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_table"
        android:layout_weight="0"
        android:padding="5dp"
        android:background="@color/cardview_light_background">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/runLabel"
                android:layout_height="match_parent"
                android:paddingHorizontal="90dp"
                android:text="Club" />

            <TextView
                android:id="@+id/hitLabel"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp"
                android:text="DG" />

            <TextView
                android:id="@+id/errorLabel"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="30dp"
                android:text="Points" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/visitorRuns"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text="Club1" />

            <TextView
                android:id="@+id/visitorHits"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="+1" />

            <TextView
                android:id="@+id/visitorErrors"
                android:layout_height="match_parent"
                android:paddingHorizontal="47dp"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/visitorRuns1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:text="Club2" />

            <TextView
                android:id="@+id/visitorHits1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="-1" />

            <TextView
                android:id="@+id/visitorErrors1"
                android:layout_height="match_parent"
                android:paddingHorizontal="47dp"
                android:text="0" />
        </TableRow>
    </TableLayout>
</RelativeLayout>